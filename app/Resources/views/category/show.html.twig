{% extends 'base.html.twig' %}

{% block main %}
    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
    <h1>Category</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Categoryname</th>
                <td>{{ category.categoryName }}</td>
            </tr>
        </tbody>
    </table>

<div class="form-group">
    <div class="btn-group-xs">
        <a class="btn btn-primary btn-success" href="{{ path('category_index') }}">BACK TO THE LIST</a>
        <a class="btn btn-primary btn-success" href="{{ path('category_edit', { 'id': category.id }) }}">EDIT</a>
        <a class="btn btn-primary btn-warning" href="{{ path('category_delete',{'id': category.id }) }}">DELETE</a>
    </div>
</div>

{% endblock %}
