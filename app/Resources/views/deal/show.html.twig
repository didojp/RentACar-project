{% extends 'base.html.twig' %}

{% block body %}
    <h1>Deal</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ deal.id }}</td>
            </tr>
            <tr>
                <th>Dealprice</th>
                <td>{{ deal.dealPrice }}</td>
            </tr>
            <tr>
                <th>Numberofdays</th>
                <td>{{ deal.numberOfDays }}</td>
            </tr>
            <tr>
                <th>Fromdate</th>
                <td>{% if deal.fromDate %}{{ deal.fromDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Todate</th>
                <td>{% if deal.toDate %}{{ deal.toDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('deal_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('deal_edit', { 'id': deal.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
