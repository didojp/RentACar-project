{% extends 'base.html.twig' %}

{% block main %}
    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
    <h1>Extras</h1>
    {% block selectBar %}{% endblock %}
    <table>
        <tbody>
        <tr>
            <th>
            </th>
            <td><img src="{{ asset('uploads/extras/' ~ extra.image) }}" width="350" height="200"></td>
        </tr>
        <tr>
            <th>Name:</th>
            <td>{{ extra.name }}</td>
        </tr>
        <tr>
            <th>Description:</th>
            <td>{{ extra.description }}</td>
        </tr>
        <tr>
            <th>Price BGN:</th>
            <td>{{ extra.price }}</td>
        </tr>
        </tbody>
    </table>

    <div class="form-group">
    <div class="btn-group-xs">
    <a class="btn btn-primary btn-success" href="{{ path('extra_index') }}">Back to the list</a>
{#    <a class="btn btn-primary btn-success" href="{{ path('booking_new',{ 'car_id': car.id}) }}">Book this car</a>#}

    {% if app.user != null %}
    {% if app.user.isAdmin or app.user.isModerator %}

        <a class="btn btn-primary btn-success"  href="{{ path('extra_edit',{ 'id': extra.id}) }}">EDIT</a>
        <a class="btn btn-primary btn-danger"  href="{{ path('extra_delete',{'id': extra.id}) }}">DELETE</a>
        </div>
        </div>

    {% endif %}
    {% endif %}
{% endblock %}

