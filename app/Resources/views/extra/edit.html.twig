{% extends 'base.html.twig' %}

{% block main %}
    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            <p style="background-color: #aacd4e">{{ message }}</p>
        </div>
    {% endfor %}
    <div class="container body-content span=8 offset=2"> {# за да възприеме файлът на снимката#}
        <div class="well">
            <form class="form-horizontal" enctype="multipart/form-data" action="{{ path('extra_edit', {id: extra.id}) }}" method="post">
                <fieldset>
                    <legend><h1>Edit extra</h1></legend>
                    {{ form_start(edit_form) }}
                    {{ form_row(edit_form.name) }}
                    {{ form_row(edit_form.price) }}
                    {{ form_row(edit_form.image )}}
                    {{ form_widget(edit_form) }}
                    <input type="submit" value="Edit" />
                    {{ form_end(edit_form) }}
                </fieldset>
            </form>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-4 col-sm-offset-4">
            <a class="btn btn-default" href="{{ path('extra_index') }}">Back to the list</a>
{#            <a class="btn btn-danger" href="{{ path('extra_delete', {'id': extra.id}) }}">Delete</a>#}
        </div>
    </div>
{% endblock %}

